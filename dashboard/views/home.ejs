      box-sizing: border-box;
    }

    html, body {
      height: 100%;
      width: 100%;
      background: radial-gradient(ellipse at 50% 30%, #23283b 60%, #181c23 100%);
      font-family: 'Segoe UI', sans-serif;
      color: #fff;
      overflow-x: hidden;
    }

    .wrapper {
      min-height: 100%;
      display: flex;
      flex-direction: column;
    }

    .content-wrapper {
      flex: 1;
    }

    .home-landing-content {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-start;
      padding: 60px 20px;
    }

    .home-hero {
      text-align: center;
      margin-bottom: 40px;
    }

    .home-logo {
      width: 110px;
      height: 110px;
      border-radius: 24px;
      box-shadow: 0 4px 32px #00000050;
      margin-bottom: 18px;
    }

    .home-title {
      font-size: 2.8rem;
      font-weight: 900;
      margin-bottom: 12px;
      letter-spacing: 1px;
    }

    .home-subtitle {
      color: #bfc6d5;
      font-size: 1.25rem;
      margin-bottom: 32px;
      font-weight: 500;
    }

    .home-cta {
      display: flex;
      flex-wrap: wrap;
      gap: 18px;
      justify-content: center;
      margin-bottom: 32px;
    }

    .home-btn {
      font-size: 1.18rem;
      font-weight: 700;
      padding: 16px 32px;
      border-radius: 16px;
      box-shadow: 0 2px 12px #00000030;
      transition: background 0.2s, box-shadow 0.2s, transform 0.1s;
    }

    .btn-primary.home-btn {
      background: linear-gradient(90deg, #3a8fff 0%, #0059ff 100%);
      color: #fff;
    }

    .btn-success.home-btn {
      background: linear-gradient(90deg, #1fd655 0%, #1fa855 100%);
      color: #fff;
    }

    .btn-secondary.home-btn {
      background: #2a3145;
      color: #3a8fff;
      border: 1px solid #3a8fff;
    }

    .home-features {
      background: #23283b;
      border-radius: 18px;
      box-shadow: 0 2px 16px 0 #00000040;
      border: 1px solid #2a3145;
      padding: 36px 32px;
      max-width: 650px;
      margin: 0 auto 60px;
      color: #e3e5e8;
    }

    .home-features h2 {
      color: #3a8fff;
      font-size: 2rem;
      font-weight: 800;
      margin-bottom: 18px;
      text-align: center;
    }

    .home-features ul {
      list-style: none;
      padding: 0;
      font-size: 1.15rem;
    }

    .home-features li {
      margin-bottom: 14px;
      padding-left: 1.5em;
      position: relative;
    }

    .home-features li::before {
      content: '•';
      color: #3a8fff;
      font-size: 1.3em;
      position: absolute;
      left: 0;
      top: 0.1em;
    }

    .home-footer {
      background: #181c23;
      padding: 20px 0;
      text-align: center;
      color: #9099b7;
      font-size: 0.95rem;
      border-top: 1px solid #2a3145;
    }

    .home-footer a {
      color: #3a8fff;
      text-decoration: none;
    }

    .home-footer a:hover {
      text-decoration: underline;
    }

    @media (max-width: 700px) {
      .home-title {
        font-size: 2rem;
      }

      .home-features {
        padding: 18px 16px;
      }
