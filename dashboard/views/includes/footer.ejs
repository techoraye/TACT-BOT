<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<footer class="main-footer glassmorphic-footer">
  <div class="footer-content">
    <div class="footer-left">
      <strong>
        Made with <i class="fas fa-heart pulse"></i> by 
        <a target="_blank" href="https://github.com/techoraye">techoraye</a>.
        Powered by <a href="https://adminlte.io">AdminLTE</a> and 
        <a href="https://getbootstrap.com">Bootstrap</a>.
      </strong>
    </div>
    <div class="footer-right">
      <a target="_blank" href="https://github.com/techoraye/TACT-BOT" class="version-badge">
        <span class="badge-icon"><i class="fas fa-code-branch"></i></span>
        <span class="badge-text">TACT-BOT Dashboard v0.7-beta</span>
      </a>
    </div>
  </div>
</footer>

<style>
  /* Base Footer Styles */
  .glassmorphic-footer {
    background: rgba(35, 40, 59, 0.9);
    backdrop-filter: blur(12px);
    color: #e3e5e8;
    border-top: 1px solid rgba(42, 49, 69, 0.6);
    box-shadow: 0 -4px 24px rgba(0, 0, 0, 0.25);
    padding: 16px 32px;
    font-size: 1rem;
    margin-top: 0;
    position: relative;
    z-index: 1000;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer-left, .footer-right {
    display: flex;
    align-items: center;
  }

  /* Links & Text Styles */
  .glassmorphic-footer a {
    color: #3a8fff;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    margin: 0 8px;
    position: relative;
  }

  .glassmorphic-footer a::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: #3a8fff;
    transition: width 0.3s ease;
  }

  .glassmorphic-footer a:hover {
    color: #1fd655;
  }

  .glassmorphic-footer a:hover::after {
    width: 100%;
  }

  .glassmorphic-footer .fa-heart {
    color: #e74c3c;
    margin: 0 4px;
  }

  /* Version Badge */
  .version-badge {
    background: rgba(58, 143, 255, 0.1);
    border: 1px solid rgba(58, 143, 255, 0.3);
    border-radius: 20px;
    padding: 6px 14px;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: all 0.3s ease;
  }

  .version-badge:hover {
    background: rgba(58, 143, 255, 0.2);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(58, 143, 255, 0.1);
  }

  .badge-icon {
    color: #3a8fff;
    font-size: 0.9rem;
  }

  .badge-text {
    font-weight: 600;
    color: #e3e5e8;
  }

  /* Animations */
  .pulse {
    animation: pulse 1.5s infinite;
  }

  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.2); }
    100% { transform: scale(1); }
  }

  /* Responsive Adjustments */
  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      gap: 12px;
    }
    
    .footer-left, .footer-right {
      width: 100%;
      justify-content: center;
      text-align: center;
    }
    
    .glassmorphic-footer {
      padding: 16px 20px;
    }
  }

  @media (max-width: 480px) {
    .glassmorphic-footer {
      padding: 12px 16px;
      font-size: 0.9rem;
    }
    
    .version-badge {
      padding: 4px 10px;
      font-size: 0.85rem;
    }
    
    .glassmorphic-footer a {
      margin: 0 4px;
    }
  }
</style>

<script>
  $(document).ready(function() {
    // Add hover effect to version badge
    $('.version-badge').hover(
      function() {
        $(this).addClass('hover-active');
      },
      function() {
        $(this).removeClass('hover-active');
      }
    );
  });
</script>