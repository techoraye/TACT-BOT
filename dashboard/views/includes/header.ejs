<header class="main-header themed-header">
  <!-- Logo -->
  <a href="/" class="logo themed-logo">
    <span class="logo-mini"><b>TACT</b></span>
    <span class="logo-lg"><b>TACT Dashboard</b></span>
  </a>
  <nav class="navbar navbar-static-top themed-navbar">
    <a class="sidebar-toggle" data-toggle="push-menu" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <li class="dropdown user user-menu">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <img src="<%= user.displayAvatar %>" class="user-image" alt="User Image" />
            <span class="hidden-xs"><%= user.tag %></span>
          </a>
          <ul class="dropdown-menu">
            <li class="user-footer" style="min-width: auto !important">
              <div>
                <a href="/logout" class="btn btn-default btn-flat btn-block themed-logout">Sign out</a>
              </div>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>
<style>
  .themed-header {
    background: #23283b;
    color: #e3e5e8;
    border-bottom: 1px solid #2a3145;
    box-shadow: 0 2px 16px 0 #00000040;
    padding: 0;
    min-height: 60px;
  }
  .themed-logo {
    background: #23283b !important;
    color: #3a8fff !important;
    border-right: 1px solid #2a3145;
    font-size: 1.3rem;
    font-weight: 800;
    letter-spacing: 0.5px;
    padding: 0 24px;
    height: 60px;
    display: flex;
    align-items: center;
  }
  .themed-logo .logo-mini, .themed-logo .logo-lg {
    color: #3a8fff !important;
    font-weight: 800;
    font-size: 1.2rem;
    letter-spacing: 0.5px;
  }
  .themed-navbar {
    background: #23283b !important;
    border: none;
    min-height: 60px;
    box-shadow: none;
    margin-left: 0;
  }
  .themed-navbar .navbar-custom-menu > .nav > li > a {
    color: #e3e5e8;
    font-weight: 600;
    font-size: 1.1rem;
    padding: 16px 18px;
    transition: background 0.2s, color 0.2s;
  }
  .themed-navbar .navbar-custom-menu > .nav > li > a:hover {
    background: #2a3145;
    color: #3a8fff;
  }
  .themed-navbar .user-image {
    border-radius: 50%;
    border: 2px solid #3a8fff;
    box-shadow: 0 2px 8px 0 #00000030;
    width: 32px;
    height: 32px;
    object-fit: cover;
    margin-right: 8px;
  }
  .themed-navbar .dropdown-menu {
    background: #23283b;
    border: 1px solid #2a3145;
    color: #e3e5e8;
    min-width: 140px;
    box-shadow: 0 2px 16px 0 #00000040;
  }
  .themed-navbar .dropdown-menu .user-footer {
    background: none;
    border: none;
  }
  .themed-logout {
    background: #3a8fff;
    color: #fff !important;
    border-radius: 8px;
    font-weight: 700;
    border: none;
    margin-top: 8px;
    transition: background 0.2s;
  }
  .themed-logout:hover {
    background: #1fd655;
    color: #fff !important;
  }
  @media (max-width: 600px) {
    .themed-logo {
      font-size: 1rem;
      padding: 0 10px;
    }
    .themed-navbar .navbar-custom-menu > .nav > li > a {
      font-size: 1rem;
      padding: 12px 8px;
    }
  }
</style>
